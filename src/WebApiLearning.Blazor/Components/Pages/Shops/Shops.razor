@page "/shops"
@attribute [StreamRendering]
@inject ShopService ShopService

<PageTitle>Shops</PageTitle>

<h1>Shops</h1>

<div class="mb-3 mt-2">
    <div class="form-text mb-5">This is a shop page.</div>
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <a class="btn btn-primary" role="button" href="/shops/create">New Shop</a>
        </div>
        <div class="col-auto">
        </div>
        <div class="col-auto">
        </div>
    </div>
</div>

@if (shops == null)
{
    <button class="btn btn-primary" type="button" disabled>
        <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
        <span role="status">Loading...</span>
    </button>
}
else
{
    <table class="table table-dark table-hover mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th />
            </tr>
        </thead>
        <tbody>
            @foreach (var shop in shops)
            {
                <tr>
                    <td>@shop.Name</td>
                    <td>@shop.Location</td>
                    <td>
                        <div>
                            <a class="btn btn-primary me-2" role="button" href="@EditShopUrl(shop.Id)">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button class="btn btn-danger" data-bs-toggle="modal"
                                data-bs-target="#@DeleteShop.GetModalId(shop)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                        <DeleteShop Shop="@shop" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}